<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TimePicker
            android:id="@+id/time_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:theme="@style/TimePickerTheme" />

        <!-- Repeat Option -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="16dp"
            android:text="Repeat"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox_monday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/white"
                android:fontFamily="sans-serif-medium"
                android:text="Mon"
                android:textColor="@color/white"
                app:buttonIconTint="@color/white" />

            <CheckBox
                android:id="@+id/checkBox_tuesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/white"
                android:fontFamily="sans-serif-medium"
                android:text="Tues"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/checkBox_wednesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/white"
                android:text="Wed"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/checkBox_thursday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/white"
                android:fontFamily="sans-serif-medium"
                android:text="Thurs"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/checkBox_friday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/white"
                android:fontFamily="sans-serif-medium"
                android:text="Fri"
                android:textColor="@color/white" />

        </LinearLayout>

        <!-- Mission (Challenge) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="16dp"
            android:text="Mission"
            android:textColor="@color/white" />

        <Spinner
            android:id="@+id/spinner_mission"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white" />

        <!-- Sound Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="16dp"
            android:text="Sound"
            android:textColor="@color/white" />

        <Spinner
            android:id="@+id/spinner_sound"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white" />

        <!-- Snooze Interval -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="16dp"
            android:text="Snooze"
            android:textColor="@color/white" />

        <Spinner
            android:id="@+id/spinner_snooze"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white" />

        <!-- Alarm Label -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="16dp"
            android:text="Label"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/editText_alarm_label"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Alarm Label"
            android:textColor="@color/white" />

        <!-- Confirmation Button -->
        <Button
            android:id="@+id/button_set_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="OK"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>
