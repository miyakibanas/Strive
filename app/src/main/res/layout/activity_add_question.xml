<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/questionEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="70dp"
        android:hint="Enter question" />

    <EditText
        android:id="@+id/answerEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/questionEditText"
        android:layout_marginTop="70dp"
        android:hint="Enter correct answer" />

    <EditText
        android:id="@+id/wrongAnswer1EditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/answerEditText"
        android:layout_marginTop="70dp"
        android:hint="Enter wrong answer 1" />

    <EditText
        android:id="@+id/wrongAnswer2EditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/wrongAnswer1EditText"
        android:layout_marginTop="70dp"
        android:hint="Enter wrong answer 2" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@id/wrongAnswer2EditText"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:text="Add to CSV" />
</RelativeLayout>